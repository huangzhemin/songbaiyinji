<!--components/personalComponents/personalProfileCell/personalProfileCell.wxml-->

<view>
  <view class="flex-wrp">
    <!-- <image class="avatar" src="{{(currentLoginUserData && currentLoginUserData.avatarUrl.length != 0) ? currentLoginUserData.avatarUrl : defaultAvatar}}" bind:tap="onClick"></image> -->
    <van-image
      round
      width="5rem"
      height="5rem"
      src="{{(currentLoginUserData && currentLoginUserData.avatarUrl.length != 0) ? currentLoginUserData.avatarUrl : defaultAvatar}}"
      bind:tap="onClick"
    />
    <view class="name">{{(currentLoginUserData && currentLoginUserData.nickName.length != 0) ? currentLoginUserData.nickName : '登录'}}</view>
    <block wx:if="{{currentLoginUserData && currentLoginUserData.avatarUrl.length != 0 && currentLoginUserData.nickName.length != 0}}">
      <view class="desc">小黄要加油~</view>
      <view class="rankingAndPoints">第1名 100积分</view>
    </block>
  </view>
</view>