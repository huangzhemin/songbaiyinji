<!--miniprogram/pages/tabbar/task/task.wxml-->
<view>
  <van-tabs active="{{ active }}" bind:change="clickChange" swipeable sticky>
    <van-tab title="进行中" name="doing"></van-tab>
    <van-tab title="已结束" name="over"></van-tab>
  </van-tabs>

  <!-- <template is="taskTemplate" data="{{...{active: 0}, ...swiperItem}}"/> -->
  <swiper indicator-dots="{{indicatorDots}}"
              autoplay="{{autoplay}}" 
              interval="{{interval}}" 
              duration="{{duration}}"
              current="{{active}}"
              style="height:600px"
              bind:change="swipeChange" >
      <swiper-item>
        <view class="swiper-item {{item}}">
          <pm-doing-task-list></pm-doing-task-list>
        </view>
      </swiper-item>
      <swiper-item>
        <view class="swiper-item {{item}}">
          <pm-over-task-list></pm-over-task-list>
        </view>
      </swiper-item>
  </swiper>
</view>





