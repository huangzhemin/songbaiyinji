<!--miniprogram/pages/tabbar/task/task.wxml-->
<van-tabs active="{{ active }}" bind:change="clickChange" swipeable sticky>
  <van-tab title="进行中" name="doing"></van-tab>
  <van-tab title="已结束" name="over"></van-tab>
</van-tabs>

 <swiper indicator-dots="{{indicatorDots}}"
               autoplay="{{autoplay}}" 
               interval="{{interval}}" 
               duration="{{duration}}"
               current="{{active}}"
               name="{{name}}"
               style="height:600px"
               bind:change="swipeChange" >
  <block wx:for="{{background}}" wx:key="*this">
    <swiper-item>
      <view class="swiper-item {{item}}">
        <block wx:if="{{active==0}}">
          <block wx:for='{{doingTaskList}}' wx:key="*this">
            <pm-doing-task-cell></pm-doing-task-cell>
            <pm-splite-line wx:if="{{index < doingTaskList.length - 1}}"></pm-splite-line>
          </block>
        </block>
        <block wx:if="{{active==1}}">
          <block wx:for='{{overTaskList}}' wx:key="*this">
            <pm-over-task-cell></pm-over-task-cell>
            <pm-splite-line wx:if="{{index < overTaskList.length - 1}}"></pm-splite-line>
          </block>
        </block>
      </view>
    </swiper-item>
  </block>
</swiper>