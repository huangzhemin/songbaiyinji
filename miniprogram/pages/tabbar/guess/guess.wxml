<!--miniprogram/pages/tabbar/guess/guess.wxml-->
<van-tabs active="{{ active }}" bind:change="clickChange" swipeable sticky>
  <van-tab title="猜一猜" name="guess"></van-tab>
  <van-tab title="投票" name="vote"></van-tab>
  <van-tab title="公告" name="announcement"></van-tab>
</van-tabs>

<swiper indicator-dots="{{indicatorDots}}"
               autoplay="{{autoplay}}" 
               interval="{{interval}}" 
               duration="{{duration}}"
               current="{{active}}"
               name="{{name}}"
               style="height:600px"
               bind:change="swipeChange" >
  <block wx:for="{{background}}" wx:key="*this">
    <swiper-item>
      <view class="swiper-item {{item}}">
          <block wx:if="{{active==0}}">
            <block wx:for='{{guessList}}' wx:key="*this">
              <pm-guess-cell></pm-guess-cell>
              <pm-splite-line wx:if="{{index < guessList.length - 1}}"></pm-splite-line>
            </block>
          </block>
          <block wx:if="{{active==1}}">
            <block wx:for='{{voteList}}' wx:key="*this">
              <pm-vote-cell></pm-vote-cell>
              <pm-splite-line wx:if="{{index < voteList.length - 1}}"></pm-splite-line>
            </block>
          </block>
          <block wx:if="{{active==2}}">
            <block wx:for='{{announcement}}' wx:key="*this">
              <pm-announcement-cell></pm-announcement-cell>
              <pm-splite-line wx:if="{{index < announcement.length - 1}}"></pm-splite-line>
            </block>
          </block>
      </view>
    </swiper-item>
  </block>
</swiper>